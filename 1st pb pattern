#include <iostream>
using namespace std;
int main()
{
 int i,j,n;

 cin>>n;
     for(int i=0;i<n;i++)
     {

        for(int j=0;j<n-i-1;j++)
        {
            cout<<" ";
        }


                 for(int m=0;m<i+1;m++)
                 
                 {
                      cout<<m+1;
                 }
for(int k=i;k>=1;k--)
{

    cout<<k;
}

cout<<endl;

     }

     return 0;















}
